<?xml version="1.0" encoding="utf-8"?>
<aap>
    <tasklist>
        <currenttask domain='session' desc='run tsdiffana' modality='MRI'>
            
            <qsub>
                <timeBase>0.15</timeBase>
                <memoryBase>3</memoryBase>
            </qsub>
            
            <permanenceofoutput>3</permanenceofoutput>
            <!-- nb, if manual we read the threshold from spikethresh.mat
                 in sessdir - or failing that bring up a crosshair -->
            <spikethreshold desc='normalised variance threshold or manual'>Inf</spikethreshold>
            
            <inputstreams>
                <stream>epi</stream>
            </inputstreams>
            
            <outputstreams>
                <stream>tsdiffana</stream>
                <stream>spikes</stream>
            </outputstreams>
            
        </currenttask>
    </tasklist>
</aap>
