<aap>
    <tasklist>
        <currenttask domain='study' desc='visualise linear discriminant-based decoding RFX result' modality='MRI'>
            
            <qsub>
                <timeBase>0.5</timeBase>
                <memoryBase>0.3</memoryBase>
            </qsub>
            <permanenceofoutput>3</permanenceofoutput>

            <!-- path to custom plot function in addition to plot_lindisc
                 -->
            <pluginpath></pluginpath>

            <!-- arguments for plot_lindisc -->
            <mtarget>mean</mtarget>
            <errtarget>sterr</errtarget>
            <ptarget>ppara</ptarget>
            <mlabel>mean discriminant (t)</mlabel>
            <errlabel>\pm1 standard error</errlabel>
            <pthresh>.05</pthresh>
            
            <inputstreams>
                <stream>pilab_decoder_t_rfx</stream>
            </inputstreams>
            <outputstreams>
            </outputstreams>
            
        </currenttask>
    </tasklist>
</aap>
